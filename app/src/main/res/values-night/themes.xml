<resources>
    <!-- Base application theme. -->
    <style name="Theme.AyoPintar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- TextColor -->
        <item name="android:textColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="OutlinedBoxWithBorderRadius" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.TextInputLayout</item>

        <item name="boxBackgroundColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeWidth">1dp</item>

        <item name="hintTextAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="hintTextColor">#898989</item>

    </style>
</resources>