<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AyoPintar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--        TextColor-->
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="OutlinedBoxWithBorderRadius" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.TextInputLayout</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxBackgroundColor">#F3F3F3</item>
        <item name="boxStrokeWidth">1dp</item>

        <item name="hintTextAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="hintTextColor">#898989</item>

    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="Elevation.end.icon" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="iconGravity">end</item>
    </style>
    <style name="ButtonSolidPrimary" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">24dp</item>
    </style>




</resources>